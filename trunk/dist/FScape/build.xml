<?xml version="1.0" ?>
<!--                           -->
<!-- ANT BUILD FILE FOR FSCAPE -->
<!--                           -->
<project name="FScape" default="main">
	<property name="src.dir"		value="src"/>
	<property name="build.dir"		value="build"/>
	<property name="dist.dir"		value="dist"/>
	<property name="classes.dir"	value="${build.dir}/classes"/>
	<property name="jar.dir"		value="${build.dir}"/>
	<property name="resources.dir"	value="resources"/>
	<property name="main-class"		value="de.sciss.fscape.Main"/>
	<property name="lib.dir"		value="libraries"/>
	<property name="libraries"		value="${lib.dir}/MRJAdapter.jar:${lib.dir}/NetUtil.jar"/>
	<property name="version"		value="0.71"/>
	<property name="debug"			value="false"/>

	<target name="clean">
		<delete dir="${build.dir}" />
		<delete dir="${dist.dir}" />
		<delete includeemptydirs="true">
			<fileset dir="${lib.dir}" excludes="*.jar"/>
		</delete>
	</target>
	<target name="compile">
		<mkdir dir="${classes.dir}" />
		<javac debug="${debug}" srcdir="${src.dir}" destdir="${classes.dir}" classpath="${libraries}" source="1.4" target="1.4"/>
	</target>
	<target name="jar" depends="compile">
		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}" />
				<!-- <attribute name="Class-Path" value="${libraries}" /> -->
				<!-- <attribute name="Class-Path" value="libraries/MRJAdapter.jar libraries/JCollider.jar libraries/NetUtil.jar libraries/SwingOSC.jar libraries/Normalizer.jar"/> -->
			</manifest>
		</jar>
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${resources.dir}" update="true"/>
		<!-- <unjar src="${libraries}" dest="${lib.dir}" />
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${lib.dir}" excludes="*.jar" update="true" />
		<delete includeemptydirs="true">
			<fileset dir="${lib.dir}" excludes="*.jar" />
		</delete> -->
	</target>
	<target name="main" depends="clean,compile" />
	<target name="osx-app" depends="jar">
		<copy file="${jar.dir}/${ant.project.name}.jar" todir="${ant.project.name}.app/Contents/Resources/Java" />
		<touch>
			<fileset dir="${ant.project.name}.app" />
		</touch>
	</target>
	<target name="dist" depends="clean,osx-app">
		<!-- sucky zip task don't create separate folder -->
		<dirname property="parent.dir" file="${basedir}"/>
		<basename property="folder.name" file="${basedir}"/>
		<mkdir dir="${dist.dir}"/>
		<!-- tricky shit to preserve executable attribute of bash script and mac os x executable -->
		<zip destfile="${dist.dir}/${ant.project.name}-${version}.zip">
			<zipfileset dir="${parent.dir}" includes="${folder.name}/**" excludes="${folder.name}/${classes.dir}/**, ${folder.name}/${dist.dir}, **/.DS_Store, ${folder.name}/${ant.project.name}.sh, ${folder.name}/${ant.project.name}.app/Contents/MacOS/${ant.project.name}"/>
			<zipfileset dir="${parent.dir}" includes="${folder.name}/${ant.project.name}.sh, ${folder.name}/${ant.project.name}.app/Contents/MacOS/${ant.project.name}" filemode="775"/>
		</zip>
	</target>
</project>